{
    "compileOnSave": false,
    "compilerOptions": {
      "outDir": "dist",
      "sourceMap": true,
      "composite": true,
      "declaration": true,
      "incremental": true,
      "rootDirs": ["lib",".."],
      "downlevelIteration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module":"CommonJS",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "stripInternal": true,
      "importHelpers": false,
      "target": "ES2022",
      "allowJs": true,
      "strict": false,
      "lib": ["DOM", "ES2022"],
      
    },
   "include": ["lib/**/*.ts"]
}
  